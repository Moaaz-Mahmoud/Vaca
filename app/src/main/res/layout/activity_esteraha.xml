<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EsterahaActivity">

    <TextView
        android:id="@+id/txtview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esteraha"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/esteraha"
        android:src="@drawable/esteraha"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtview1"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        />

    <TextView
        android:id="@+id/txtview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/esteraha"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:text="This is where Aswan University's faculty members reside. A masterpiece of architecture. Living here makes it easy to access any place in town, except the faculty of engineering!"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtview2"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:text="Location" />
</RelativeLayout>