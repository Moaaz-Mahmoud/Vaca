<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimbelActivity">

    <TextView
        android:id="@+id/txtview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abu Simbel"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/simbelimg"
        android:src="@drawable/faculty_eng"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtview1"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        />

    <TextView
        android:id="@+id/txtview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/simbelimg"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:text="Justly famous for its megalithic proportions,
         Abu Simbel is also known for the incredible engineering feat carried out by UNESCO in the 1960s,
         which saw the entire temple moved from its original setting to save it from disappearing under the rising water of the Aswan dam. "
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtview2"
        android:text="Check Google Maps"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        />
</RelativeLayout>